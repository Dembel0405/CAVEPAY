<style>
    /* ВАЖНО: Добавьте в ваш глобальный CSS или layout:
       body, html {
           overflow-x: hidden;
       }
       Это предотвратит горизонтальный скролл, позволяя карусели выходить за контейнер
    */

    .blockchains-section {
        position: relative;
        width: 100%;
        margin-top: 7rem;
        padding: 0;
    }

    .blockchains-title {
        font-size: 3rem;
        font-weight: 700;
        text-align: center;
        margin: 0 0 7rem 0;
        padding: 0 1rem;
    }

    .marquee-container {
        position: relative;
        left: 45%;
        right: 45%;
        margin-left: -50vw;
        margin-right: -50vw;
        width: 100vw;
        overflow: hidden;
    }

    /* Белая дымка с размытием по краям */
    .marquee-container::before,
    .marquee-container::after {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        width: 15rem;
        z-index: 10;
        pointer-events: none;
    }

    .marquee-container::before {
        left: 0;
        background: linear-gradient(to right,
        rgba(255, 255, 255, 1) 0%,
        rgba(255, 255, 255, 0.8) 30%,
        rgba(255, 255, 255, 0) 100%
        );
    }

    .marquee-container::after {
        right: 0;
        background: linear-gradient(to left,
        rgba(255, 255, 255, 1) 0%,
        rgba(255, 255, 255, 0.8) 30%,
        rgba(255, 255, 255, 0) 100%
        );
    }

    .marquee {
        overflow: hidden;
        white-space: nowrap;
        position: relative;
    }

    .marquee:first-child {
        margin-bottom: 4.375rem;
    }

    .marquee-content {
        display: inline-flex;
        gap: 1.5rem;
        animation-timing-function: linear;
        animation-iteration-count: infinite;
    }

    /* Анимация слева направо */
    .marquee-left .marquee-content {
        animation-name: scrollLeft;
        animation-duration: 40s;
    }

    /* Анимация справа налево */
    .marquee-right .marquee-content {
        animation-name: scrollRight;
        animation-duration: 40s;
    }

    @keyframes scrollLeft {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes scrollRight {
        0% {
            transform: translateX(-50%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .logo-container {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 4.5rem;
        background: rgba(143, 143, 143, 1);
        border-radius: 0.9375rem;
        padding: 1rem;
