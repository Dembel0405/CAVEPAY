---
import Vector1 from '../assets/Web3Features/Vector.png'
import Vector2 from '../assets/Web3Features/Vector2.png'
import Vector3 from '../assets/Web3Features/Vector3.png'
---
<div class="Web3Features">
    <h1 class="main-title scroll-fade-title">Web3 Made Simple</h1>
    <div class="cont">
        <div class="card1 scroll-fade-card"  style={`background-image: url(${Vector1.src})`}>
            <h2 class="title">Staking & Yield</h2>
            <p class="desc">Make your crypto work harder. Flexible staking and yield products with transparent, trackable returns.</p>
        </div>
        <div class="card2 scroll-fade-card"  style={`background-image: url(${Vector2.src})`}>
            <h2 class="title">DApp Discovery</h2>
            <p class="desc">Find it. Love it. Keep it. Explore trending DApps and bookmark your favorites in one tap.</p>
        </div>
        <div class="card3 scroll-fade-card"  style={`background-image: url(${Vector3.src})`}>
            <h2 class="title">On-Chain Crypto Gifts</h2>
            <p class="desc">Send joy, on-chain. Gift tokens to friends and communities, sparking fun and engagement.</p>
        </div>
    </div>
</div>

<script>
    // Intersection Observer для анимации при скролле
    const observerOptions = {
        threshold: 0.15,
        rootMargin: '0px 0px -80px 0px'
    };

    let animationTriggered = false;

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting && !animationTriggered) {
                animationTriggered = true;

                // Анимируем заголовок
                const title = document.querySelector('.scroll-fade-title');
                if (title) {
                    setTimeout(() => {
                        title.classList.add('visible');
                    }, 100);
                }

                // Анимируем карточки по очереди
                const cards = document.querySelectorAll('.scroll-fade-card');
                cards.forEach((card, index) => {
                    setTimeout(() => {
                        card.classList.add('visible');
                    }, 400 + (index * 250)); // 250ms между карточками
                });

                observer.disconnect();
            }
        });
    }, observerOptions);

    // Наблюдаем за секцией Web3Features
    const web3Section = document.querySelector('.Web3Features');
    if (web3Section) {
        observer.observe(web3Section);
    }
</script>

<style>
    .Web3Features {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 5rem;
        padding: 0 2rem;
    }

    .main-title {
        font-size: 4rem;
        margin: 0 0 3rem 0;
        text-align: center;
    }

    .cont {
        display: flex;
        gap: 4rem;
        align-items: stretch;
        justify-content: center;
        width: 90%;
        max-width: 1400px;
    }

    .card1,
    .card2,
    .card3 {
        flex: 1;
        background: rgba(143, 143, 143, 1);
        border-radius: 15px;
        box-shadow: 0px 4px 4px 0px rgba(34, 60, 80, 0.2) inset;
        background-size: 70%;
        background-position: bottom;
        background-repeat: no-repeat;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 3rem;
        gap: 1.4rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card1:hover,
    .card2:hover,
    .card3:hover {
        transform: translateY(-8px);
        box-shadow: 0px 8px 12px 0px rgba(34, 60, 80, 0.3);
    }

    .card1 .title,
    .card2 .title,
    .card3 .title {
        font-size: 1.7rem;
        font-weight: bold;
        color: white;
        margin: 0;
    }

    .card1 .desc,
    .card2 .desc,
    .card3 .desc {
        font-size: 1.2rem;
        margin: 0;
        color: white;
        line-height: 1.5;
    }

    /* Scroll Animations */
    .scroll-fade-card {
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 2s ease-out, transform 2s ease-out;
    }

    .scroll-fade-title {
        opacity: 1;
        transform: translateY(40px);
        transition: opacity 2s ease-out, transform 2s ease-out;
    }


    .scroll-fade-card.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .scroll-fade-title.visible {
        opacity: 0;
        transform: translateY(0);
    }

    /* Responsive Design */

