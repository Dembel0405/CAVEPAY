        .overview {
            gap: 4rem;
            padding: 3rem 0;
        }

        .item1, .item2, .item3, .item4 {
            width: 500px;
            min-height: 400px;
        }

        .title {
            font-size: 2.5rem;
        }

        .subtitle {
            font-size: 1.1rem;
        }

        .left, .right {
            gap: 8rem;
        }
    }

    /* Desktop (1200px - 1919px) */
