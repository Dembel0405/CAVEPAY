---
import Wallet from "../assets/WALLET 1.png"
import Secure from '../assets/Secure by design - smaer.png'
---
<div class="hero-content">
    <h1 class="title fade-in">The crypto <span class="whiteTitle">super wallet</span> that lets you talk to your money</h1>
    <img class="wallet-img fade-in" src={Wallet.src} alt="Wallet" />
    <div class="secure fade-in">
        <img src={Secure.src} alt="Secure key by design Smart by default" />
    </div>
</div>

<style>
    .hero-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 5rem;
        padding: 0 1rem;
    }

    .title {
        font-size: 3.2rem;
        text-align: center;
        width: 55%;
        line-height: 1.2;
        margin-bottom: 1rem;
    }

    .whiteTitle {
        color: white;
    }

    .wallet-img {
        width: -webkit-fill-available;
        max-width: 85%;
        height: auto;
    }

    .secure {
        margin-top: 3rem;
    }

    .secure img {
        max-width: 100%;
        height: auto;
    }

    /* Fade-in Animation */
    .fade-in {
        opacity: 0;
        animation: fadeIn 0.5s ease-in forwards;
    }

    .title.fade-in {
        animation-delay: 0.5s;
    }

    .wallet-img.fade-in {
        animation-delay: 0.5s;
    }

    .secure.fade-in {
        animation-delay: 0.5s;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Responsive Design */

    /* Large Desktop (1920px+) */
    @media (min-width: 1920px) {
        .title {
            font-size: 4rem;
            width: 50%;
        }

        .hero-content {
            margin-top: 5rem;
        }

        .secure {
            margin-top: 4rem;
        }
    }

    /* Desktop (1200px - 1919px) */
    @media (max-width: 1199px) {
        .title {
            font-size: 2.8rem;
            width: 65%;
        }
    }

    /* Tablet Landscape (992px - 1199px) */
    @media (max-width: 991px) {
        .title {
            font-size: 2.5rem;
            width: 75%;
        }

        .hero-content {
            margin-top: 5rem;
        }

        .wallet-img {
            max-width: 90%;
        }

        .secure {
            margin-top: 2.5rem;
        }
    }

    /* Tablet Portrait (768px - 991px) */
    @media (max-width: 767px) {
        .title {
            font-size: 2rem;
            width: 85%;
            margin-bottom: 1.5rem;
        }

        .hero-content {
            margin-top: 5rem;
        }

        .wallet-img {
            max-width: 95%;
        }

        .secure {
            margin-top: 2rem;
        }
    }

    /* Mobile Large (576px - 767px) */
    @media (max-width: 575px) {
        .title {
            font-size: 1.75rem;
            width: 90%;
            line-height: 1.3;
        }

        .hero-content {
            margin-top: 3.5rem;
            padding: 0 0.75rem;
        }

        .wallet-img {
            max-width: 100%;
        }

        .secure {
            margin-top: 1.5rem;
        }
    }

    /* Mobile Medium (480px - 575px) */
    @media (max-width: 479px) {
        .title {
            font-size: 1.5rem;
            width: 95%;
        }

        .hero-content {
            margin-top: 3rem;
        }
    }

    /* Mobile Small (320px - 479px) */
    @media (max-width: 374px) {
        .title {
            font-size: 1.3rem;
            width: 100%;
            line-height: 1.4;
        }

        .hero-content {
            margin-top: 3rem;
            padding: 0 0.5rem;
        }

        .secure {
            margin-top: 1.25rem;
        }
    }
</style>